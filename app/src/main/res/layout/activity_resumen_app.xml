<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detalle_app_imagen"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/image_splash"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="9">

            <TextView
                android:id="@+id/detalle_app_nombre"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="@string/entry_nombre"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/size_entry_nombre"
                android:lines="1"
                android:textColor="@color/verdeOscuro"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/detalle_app_artista"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="@string/entry_artista"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/size_entry_item"
                android:lines="1"
                android:textColor="@color/azul"/>

            <TextView
                android:id="@+id/detalle_app_precio"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="@string/entry_precio"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/size_entry_item"
                android:lines="1"
                android:textColor="@color/azul"/>


            <TextView
                android:id="@+id/detalle_app_derechos"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="@string/entry_derechos"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/size_entry_item"
                android:lines="1"
                android:textColor="@color/azul"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView android:id="@+id/textAreaScroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_x="0px"
        android:layout_y="25px"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/detalle_app_resumen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"/>

    </ScrollView>


</LinearLayout>